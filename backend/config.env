# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://[neon-username]:[neon-password]@[neon-host]/[neon-database]?sslmode=require

# Redis Configuration (Render Redis)
REDIS_URL=redis://[render-redis-host]:[render-redis-port]

# Environment
ENVIRONMENT=production

# WebSocket Configuration (Render Backend)
WEBSOCKET_URL=wss://[render-backend-url]/ws

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://[your-project].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=[your-supabase-anon-key]
SUPABASE_SERVICE_ROLE_KEY=[your-supabase-service-role-key]

# Vercel Configuration
VERCEL_URL=https://[your-vercel-app].vercel.app
NEXT_PUBLIC_VERCEL_URL=https://[your-vercel-app].vercel.app

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Logging
LOG_LEVEL=INFO

# Sentry Configuration (for error tracking)
SENTRY_DSN=[your-sentry-dsn]
SENTRY_ENVIRONMENT=production

# API Keys (if needed)
GOOGLE_PLACES_API_KEY=[your-google-places-api-key]
