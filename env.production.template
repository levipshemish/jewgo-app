# JewGo Backend Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://jewgo_user:your_secure_postgres_password_here@postgres:5432/jewgo_db

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0

# Security
SECRET_KEY=your_super_secure_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# CORS Configuration
CORS_ORIGINS=https://jewgo.app,https://your-frontend-domain.com

# Monitoring
SENTRY_DSN=https://your-sentry-dsn-here

# Google APIs (if using)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Rate Limiting
RATELIMIT_DEFAULT=1000 per hour;100 per minute
RATELIMIT_STORAGE_URL=redis://:your_secure_redis_password_here@redis:6379/0

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0
CACHE_DEFAULT_TIMEOUT=600
CACHE_KEY_PREFIX=jewgo:

# Session Configuration
SESSION_TYPE=redis
SESSION_REDIS=redis://:your_secure_redis_password_here@redis:6379/0
SESSION_KEY_PREFIX=jewgo_session:
PERMANENT_SESSION_LIFETIME=3600
