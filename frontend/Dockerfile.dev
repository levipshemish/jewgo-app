# Development Dockerfile for Next.js
FROM node:22-alpine

# Install curl for health checks
RUN apk add --no-cache curl

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY package-lock.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Set development environment
ENV NODE_ENV=development
ENV DOCKER=true

# Validate environment variables (but don't fail in dev)
RUN npm run validate-env || echo "Environment validation warnings in development mode"

# Expose port 3000
EXPOSE 3000

# Start the development server
CMD ["npm", "run", "dev"]
