# Development Dockerfile for Next.js with Hot Reloading
FROM node:22-alpine

# Install curl for health checks and file watching tools
RUN apk add --no-cache curl

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY package-lock.json ./

# Copy Prisma schema before installing dependencies
COPY prisma ./prisma/

# Install dependencies (including dev dependencies for hot reloading)
RUN npm ci

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Set development environment
ENV NODE_ENV=development
ENV DOCKER=true
ENV WATCHPACK_POLLING=true
ENV CHOKIDAR_USEPOLLING=true

# Validate environment variables (but don't fail in dev)
RUN npm run validate-env || echo "Environment validation warnings in development mode"

# Expose port 3000
EXPOSE 3000

# Start the development server with enhanced file watching
CMD ["npm", "run", "dev", "--", "--turbo", "--hostname", "0.0.0.0"]
