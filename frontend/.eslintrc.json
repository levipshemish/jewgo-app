{
  "extends": [
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "react-hooks"],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["warn", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "caughtErrorsIgnorePattern": "^_",
      "destructuredArrayIgnorePattern": "^_"
    }],
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": ["error", {
      "additionalHooks": "(useRecoilCallback|useRecoilTransaction_UNSTABLE)"
    }],
    "prefer-const": "warn",
    "no-var": "error",
    "no-console": ["warn", { "allow": ["error", "warn", "info", "log"] }],
    "eqeqeq": ["warn", "always"],
    "curly": ["warn", "all"],
    "no-duplicate-imports": "warn",
    "no-unused-expressions": "warn",
    "prefer-template": "warn",
    "object-shorthand": "warn",
    "prefer-arrow-callback": "warn",
    "@next/next/no-img-element": "off",
    "@typescript-eslint/no-unused-expressions": "warn",
    "no-unused-vars": "off",
    "no-undef": "warn",
    "no-redeclare": "warn",
    "no-shadow": "warn",
    "no-shadow-restricted-names": "warn",
    "react/no-unescaped-entities": "warn",
    "no-restricted-imports": [
      "warn",
      {
        "paths": [
          {
            "name": "@/lib/utils/admin",
            "message": "Import from '@/lib/server/admin-utils' for server components or use 'useAuth' hook for client components. See migration guide in lib/utils/admin.ts"
          }
        ],
        "patterns": [
          {
            "group": ["@/lib/utils/admin/*"],
            "message": "Import from '@/lib/server/admin-utils' for server components or use 'useAuth' hook for client components. See migration guide in lib/utils/admin.ts"
          },
          {
            "group": ["@/lib/server/**"],
            "message": "Server-only modules cannot be imported in client components. Use 'use server' directive or move to server components. See migration guide in docs/MIGRATION.md"
          },
          {
            "group": ["@/lib/admin/**"],
            "message": "Admin modules cannot be imported in client components. Use 'use server' directive or move to server components. See migration guide in docs/MIGRATION.md"
          }
        ]
      }
    ]
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "google": "readonly"
  },
  "overrides": [
    {
      "files": [
        "app/api/**",
        "app/**/route.ts",
        "app/**/route.tsx",
        "app/admin/**",
        "middleware.ts",
        "middleware-security.ts"
      ],
      "rules": {
        "no-restricted-imports": "off"
      }
    },
    {
      "files": ["lib/server/**"],
      "rules": {
        "no-restricted-imports": "off",
        "no-console": "off",
        "curly": "off",
        "prefer-template": "off"
      }
    },
    {
      "files": ["lib/contexts/**", "lib/hooks/**"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {
        "no-undef": "off",
        "curly": "off",
        "no-duplicate-imports": "off"
      }
    },
    {
      "files": ["**/*.d.ts"],
      "rules": {
        "no-undef": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    },
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/__tests__/**/*.ts",
        "**/__tests__/**/*.tsx",
        "lib/test-utils/**/*.ts"
      ],
      "env": { "jest": true },
      "rules": {
        "no-undef": "off",
        "no-console": "off"
      }
    },
    {
      "files": ["scripts/**/*.ts", "scripts/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "build/",
    "dist/",
    "*.config.js",
    "*.config.ts",
    "lib/polyfills/*.js",
    "scripts/*.js",
    "lib/admin/**",
    "app/test-*/**"
  ]
} 