# Netlify Environment Variables Template
# Copy this file to netlify.env and fill in your actual values
# Then use: netlify env:import netlify.env

# Required environment variables for the app
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEXT_PUBLIC_GOOGLE_MAPS_MAP_ID=5060e374c6d88aacf8fea324
NEXT_PUBLIC_BACKEND_URL=https://jewgo-app-oyoh.onrender.com
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database configuration
DATABASE_URL=your_database_url_here

# Authentication configuration
NEXTAUTH_URL=https://your-app-name.netlify.app
NEXTAUTH_SECRET=your_nextauth_secret_here

# Supabase configuration (if using)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Email configuration (if using)
EMAIL_SERVER_HOST=your_email_host_here
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email_user_here
EMAIL_SERVER_PASSWORD=your_email_password_here
EMAIL_FROM=noreply@yourdomain.com

# Sentry configuration (if using)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org_here
SENTRY_PROJECT=your_sentry_project_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Build configuration
NODE_ENV=production
PRISMA_QUERY_ENGINE_TYPE=library
