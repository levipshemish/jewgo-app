#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Checking code style..."
npm run lint

# Run type checking
echo "🔍 Checking TypeScript..."
npm run type-check

# Test build to catch any critical issues
echo "🏗️ Testing build..."
npm run build

echo "✅ Pre-commit checks passed!"
