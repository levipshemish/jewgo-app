[Unit]
Description=JewGo Backend API Instance 2
After=network.target postgresql.service redis-server.service
Wants=postgresql.service redis-server.service

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/srv/jewgo/backend/backend
Environment=PATH=/srv/jewgo/backend/venv/bin
Environment=INSTANCE_ID=jewgo-backend-2
Environment=FLASK_APP=app.py
Environment=FLASK_ENV=production
Environment=PORT=8083
ExecStart=/srv/jewgo/backend/venv/bin/python app.py
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=jewgo-backend-2

[Install]
WantedBy=multi-user.target
