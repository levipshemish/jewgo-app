# JewGo Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=production

# Database Configuration
POSTGRES_DB=jewgo
POSTGRES_USER=jewgo_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://jewgo_user:your_secure_password_here@postgres:5432/jewgo

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_USERNAME=
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379/0

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# PostgreSQL Auth Configuration
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
PASSWORD_HASH_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=https://jewgo.app,http://localhost:3000,http://frontend:3000

# Logging
LOG_LEVEL=INFO

# Sentry (Optional)
SENTRY_DSN=

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://backend:8000
NEXT_PUBLIC_BACKEND_URL=http://backend:8000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Cloudinary Configuration (Optional)
CLOUDINARY_URL=cloudinary://your_cloudinary_url_here
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
