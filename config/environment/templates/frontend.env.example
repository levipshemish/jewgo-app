# Frontend Environment Configuration Example
# Copy this file to .env.local and fill in your actual values

# PostgreSQL Authentication Configuration
# Backend URL for PostgreSQL authentication API
NEXT_PUBLIC_BACKEND_URL=http://127.0.0.1:8081

# JWT Configuration (for PostgreSQL auth)
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-key-here

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_GOOGLE_MAPS_MAP_ID=your-google-maps-map-id
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Redis Configuration (Required for Rate Limiting)
# Option 1: Use Redis URL (recommended)
REDIS_URL=redis://username:password@host:port/database

# Option 2: Use individual Redis variables
# REDIS_HOST=your-redis-host
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
# REDIS_DB=0

# =============================================================================
# ADMIN AUTHENTICATION (PostgreSQL Role-Based)
# =============================================================================
# Admin roles are managed through PostgreSQL user_roles table
# No environment variables needed - authentication is JWT-based
# To create admin users:
# 1. User signs up normally through PostgreSQL auth
# 2. Insert role into user_roles table: 
#    INSERT INTO user_roles (user_id, role, level, granted_at, is_active) VALUES ('user-id', 'admin', 10, NOW(), true)

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your-google-analytics-measurement-id
NEXT_PUBLIC_GA_ENABLED=true
NEXT_PUBLIC_GA_DEBUG_MODE=false

# Enhanced Analytics Configuration
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ANALYTICS_PROVIDER=google_analytics
NEXT_PUBLIC_ANALYTICS_TRACK_USER_ID=true
NEXT_PUBLIC_ANALYTICS_TRACK_SESSION_ID=true
NEXT_PUBLIC_ANALYTICS_TRACK_PERFORMANCE=true
NEXT_PUBLIC_ANALYTICS_TRACK_ERRORS=true

# Google Analytics Enhanced Ecommerce (Optional)
NEXT_PUBLIC_GA_ENHANCED_ECOMMERCE=true
NEXT_PUBLIC_GA_CUSTOM_DIMENSIONS=true

# Analytics API Configuration
NEXT_PUBLIC_ANALYTICS_API_ENDPOINT=/api/analytics
NEXT_PUBLIC_ANALYTICS_BATCH_SIZE=10
NEXT_PUBLIC_ANALYTICS_FLUSH_INTERVAL=30000

# Scraper Configuration
SCRAPER_TOKEN=your-scraper-token-here

# Environment
NODE_ENV=development

# Backend URL for API calls
BACKEND_URL=http://localhost:5000

# Feature Flags
NEXT_PUBLIC_FEATURE_FLAGS={}

# Sentry Configuration (optional)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# Development Configuration
ANALYZE=false

# Production URLs
# NEXT_PUBLIC_BACKEND_URL=https://jewgo-app-oyoh.onrender.com
