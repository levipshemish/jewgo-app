services:
  - type: web
    name: jewgo-backend
    env: python
    buildCommand: chmod +x build.sh && ./build.sh
    startCommand: cd backend && PYTHONPATH=. gunicorn --config config/gunicorn.conf.py wsgi:app
    envVars:
      - key: PYTHON_VERSION
        value: 3.11.8
      - key: NODE_VERSION
        value: 24.5.0
      - key: PIP_NO_DEFAULT_INDEX
        value: "false"
    buildFilter:
      paths:
        - backend/**
        - build.sh
        - pyproject.toml 